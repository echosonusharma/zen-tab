{
  "name": "ZenTab",
  "version": "1.0.16",
  "description": "Quick and simple tab management",
  "author": "Sonu Sharma",
  "manifest_version": 3,
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "windows",
    "idle"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*",
        "images/*",
        "*.wasm"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "next_tab": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "move to next tab"
    },
    "prev_tab": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "move to previous tab"
    },
    "next_win": {
      "description": "move to next window"
    },
    "prev_win": {
      "description": "move to previous window"
    },
    "open_and_close_search": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "open and close tab search modal"
    }
  }
}