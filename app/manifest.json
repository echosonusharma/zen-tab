{
  "name": "ZenTab",
  "version": "1.0.0",
  "description": "My Awesome ZenTab",
  "author": "Sonu Sharma",
  "manifest_version": 3,
  "permissions": ["storage", "tabs", "activeTab", "scripting", "windows", "idle"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/*", "images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "next_tab": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "move to next tab"
    },
    "prev_tab": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "move to previous tab"
    },
    "next_win": {
      "description": "move to next window"
    },
    "prev_win": {
      "description": "move to previous window"
    },
    "open_search": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "open tab search modal"
    },
    "close_search": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "close tab search modal"
    }
  }
}
